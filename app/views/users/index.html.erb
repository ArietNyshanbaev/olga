<body>

<!-- JS
================================================== -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="assets/jquery.easing.1.3.js"></script>
<script src="assets/bootstrap.js"></script>
<script src="assets/jquery.prettyPhoto.js"></script>
<script src="assets/jquery.quicksand.js"></script>
<script src="assets/jquery.custom.js"></script>

	<div class="color-bar-1"></div>
    <div class="color-bar-2 color-bg"></div>
    
    <div class="container main-container">
    
      <div class="row header"><!-- Begin Header -->
      
        <!-- Logo
        ================================================== -->
        <div class="span5 logo">
          <a href="<%=home_path%>"><img src="../../assets/piccolo-logo.png" alt="" /></a>

            <h5>Connect life and learning.</h5>
        </div>
        
         <div class="span7 navigation">
            <div class="navbar hidden-phone">
            <ul class="nav">
            <li>
                <%= link_to "Home", home_path %>
            </li>
     
             <li>
                <%= link_to "Gallery", gallery_path %>
             </li>
             <li>
                <%= link_to "Blog", blog_path %>
             </li>
             <li class="active"><%= link_to "Users", users_path %></li>
             <li><%= link_to "Profile", current_user %></li>
             <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
        	</div>
        </div>

      </div><!-- End Header -->
     
    <!-- Page Content
    ================================================== --> 
    <div class="row">

        <!-- Gallery Items
        ================================================== --> 
        <div class="span12 gallery">

            <div class="row clearfix">
                <ul class="gallery-post-grid holder">
                <%= will_paginate %>
	                  <% @users.each do |user| %>
					    <li  class="span2 gallery-item" data-id="id-1" data-type="illustration">
	                        <span class="gallery-hover-6col hidden-phone hidden-tablet">
	                            <span class="gallery-icons">
	                                <%= link_to "", user ,class: 'item-details-link'%>
	                            </span>
	                        </span>
	                        <%= gravatar_for user , "140x100" %>
	                        <span class="project-details"><%= link_to user.name, user %></span>
                    	</li>
					  <% end %>
				<%= will_paginate %>
                </ul>
            </div>

        </div><!-- End gallery list-->

    </div><!-- End container row -->
    
    </div> <!-- End Container -->

    <!-- Footer Area
        ================================================== -->
	<%= render 'shared/footer'%>

    <!-- Scroll to Top -->  
    <div id="toTop" class="hidden-phone hidden-tablet">Back to Top</div>
    
</body>
</html>
