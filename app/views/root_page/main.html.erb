<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag "application", params[:controller] %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
	<div class="container">
		<div id="main">
			<div class="container slogan">

			    <img height="200" width="200" src="assets/logo-iaau.png" alt="alatoo-logo">

			    <h2>U-Life</h2>
			    <hr>
			    <h3>Become the part of something really big.</h3>	
			</div>
			<div class="row">
			    <div class="col-md-4">
			    </div>
			    <div class="col-md-4">
				    <div class="login">
				    <%= render 'shared/error_messages' %>
				    <% flash.each do |message_type, message| %>
			        	<div class="alert alert-<%= message_type %>"><%= message %></div>
			        <% end %>
						<h1>Login</h1>
					    <%= form_for(:session, url: login_path) do |f| %>
					    	<%= f.email_field(:email , placeholder: 'ex: ariet.nyshanbaev@iaau.edu.kg')%>
					        <%= f.password_field(:password, placeholder: 'your passowrd') %>
					        <%= f.submit "Log in", class: "btn btn-primary btn-block btn-large" %>
					        or<br>
					    <% end %>
					    <button data-toggle="modal" data-target="#register" type="button" class="btn btn-danger btn-block btn-large"><span style="cursor:pointer">Registration</span></button>
					</div>
			    </div>
			    <div class="col-md-4"></div>
			</div>
		</div>

		

		<div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	      <div class="modal-dialog">
	        <div class="modal-content">
	            <%= form_for(@user) do |f| %>
		            <div class="modal-header">
		                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		                <h3 class="modal-title yellow" id="myModalLabel">Registration</h3>
		            </div>
		            <div class="modal-body">
		            	<%= f.hidden_field :name, {:value => "nameholder"}%>
		                <label class="yellow" for="email">Email</label>
		                <%= f.email_field :email, class: 'form-control'%>
		                <label class="yellow" for="email">Password</label>
		                <%= f.password_field :password, class: 'form-control' %>
		                <label class="yellow" for="email">Repeate password</label>
		                <%= f.password_field :password_confirmation, class: 'form-control' %>
		                <div class="modal-footer">
		                    <input type='submit' value='Register'  class="btn btn-primary" role="button"><br><br>
		                    <button type="button" class="btn btn-block btn-default" data-dismiss="modal">Cancel</button>
		                </div>
		          	</div>
	          	<% end %>
	        </div>
	      </div>
	    </div>

	    <%= debug(params) if Rails.env.development? %>
	</div>
</body>
