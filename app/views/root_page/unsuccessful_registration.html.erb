<body>
	<div class="container">
		<div id="main">
			<div class="container slogan">
			<div class="span4"></div>
			<div class="span4" style="text-align: center ">
			    <img height="200" width="200" src="assets/logo-iaau.png" alt="alatoo-logo">

			    <h2 >U-Life</h2>
			    <hr>
			</div>
			    
			</div>
			<div class="container">
			    <div class="span4">
			    </div>
			    <div class="span4" style="text-align: center ">
				    <div class="login">
				    <%= render 'shared/error_messages_register' %>
				    <% flash.each do |message_type, message| %>
			        	<div class="alert alert-<%= message_type %>"><%= message %></div>
			        <% end %>
				    <%= form_for(@user) do |f| %>
		            <div class="modal-header">
		                <h3 class="modal-title yellow" id="myModalLabel">Registration</h3>
		            </div>
		            <div class="modal-body">
		            	<%= f.hidden_field :name, {:value => "nameholder"}%>
		                <label class="yellow" for="email">Email</label>
		                <%= f.email_field :email, :required => true, class: 'form-control'%>
		                <label class="yellow" for="email">Password</label>
		                <%= f.password_field :password, :required => true, class: 'form-control' %>
		                <label class="yellow" for="email">Repeate password</label>
		                <%= f.password_field :password_confirmation, :required => true, class: 'form-control' %>
		                
		                <input type='submit' value='Register'  class="btn btn-primary btn-block" role="button"><br><br>
		                
		          	</div>
	          	<% end %>
					</div>
			    </div>
			    <div class="span4"></div>
			</div>
		</div>

		

		

	    <%= debug(params) if Rails.env.development? %>
	</div>
</body>
